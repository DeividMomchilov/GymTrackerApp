@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header bg-transparent border-secondary text-center py-4">
                <h2 class="mb-0"><i class="bi bi-person-plus-fill text-success"></i> Create Account</h2>
            </div>
            <div class="card-body p-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="username" aria-required="true" placeholder="Username" />
                        <label asp-for="Input.Username" class="text-light">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-light">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-light">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="text-light">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-lg btn-success">Register</button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">
                            <span class="text-white-50">Already have an account?</span>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-info text-decoration-none fw-bold">Log in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}