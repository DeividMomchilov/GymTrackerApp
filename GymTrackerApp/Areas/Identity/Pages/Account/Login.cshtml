@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header bg-transparent border-secondary text-center py-4">
                <h2 class="mb-0"><i class="bi bi-person-circle text-primary"></i> Welcome Back</h2>
            </div>
            <div class="card-body p-4">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Username" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="username" aria-required="true" placeholder="" />
                            <label asp-for="Input.Username" class="text-light">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control bg-secondary text-white border-dark placeholder-white" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-light">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label text-light">
                                <input class="form-check-input bg-secondary border-secondary" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Log in</button>
                        </div>

                        <div class="text-center">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-info text-decoration-none small">Forgot your password?</a>
                            </p>
                            <p class="mb-0">
                                <span class="text-white-50">Don't have an account?</span>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-info text-decoration-none fw-bold">Register</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}