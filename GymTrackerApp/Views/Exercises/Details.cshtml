@using GymTrackerApp.ViewModels.ViewModels.Exercise;
@using System.Security.Claims
@model ExerciseViewModel

@{
    ViewData["Title"] = "Exercise Details";
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white border-secondary shadow-lg">

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="max-height: 400px; object-fit: cover; border-bottom: 1px solid #495057;">
                }
                else
                {
                    <div class="card-img-top bg-secondary text-white d-flex justify-content-center align-items-center" style="height: 300px; border-bottom: 1px solid #495057;">
                        <span class="fs-1"><i class="bi bi-image"></i> No Image Available</span>
                    </div>
                }

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="card-title fw-bold text-info">@Model.Name</h2>
                        <span class="badge bg-primary fs-6">Target: @Model.MuscleName</span>
                    </div>

                    <h5 class="text-light border-bottom border-secondary pb-2 mb-3">Instructions</h5>
                    <p class="card-text fs-5" style="white-space: pre-wrap;">@Model.Description</p>

                    <div class="mt-4 d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-light">
                            <i class="bi bi-arrow-left"></i> Back to Library
                        </a>

                        @if (User.Identity?.IsAuthenticated ?? false && currentUserId == Model.CreatorId)
                        {
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this exercise?');" class="d-inline">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>