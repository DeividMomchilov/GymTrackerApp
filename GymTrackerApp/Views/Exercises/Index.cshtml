@using GymTrackerApp.ViewModels.ViewModels.Exercise
@using System.Security.Claims
@model IEnumerable<ExerciseViewModel>

@{
    ViewData["Title"] = "Exercise Library";
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<div class="d-flex justify-content-between align-items-center mb-4 text-white">
    <h1><i class="bi bi-collection-play"></i> @ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add New Exercise
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-secondary text-center">
        <h4>No exercises found.</h4>
        <p>Be the first to add one to the library!</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var exercise in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white border-secondary shadow">

                    @if (!string.IsNullOrEmpty(exercise.ImageUrl))
                    {
                        <img src="@exercise.ImageUrl" class="card-img-top" alt="@exercise.Name" style="height: 200px; object-fit: cover; border-bottom: 1px solid #495057;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary text-white d-flex justify-content-center align-items-center" style="height: 200px; border-bottom: 1px solid #495057;">
                            <span class="fs-1"><i class="bi bi-image"></i></span>
                        </div>
                    }

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title text-info">@exercise.Name</h5>
                            <span class="badge bg-secondary border border-light">@exercise.MuscleName</span>
                        </div>
                        <p class="card-text text-white-50 small text-truncate">@exercise.Description</p>
                    </div>

                    <div class="card-footer bg-transparent border-top border-secondary">
                        <div class="d-flex gap-2">

                            <a asp-action="Details" asp-route-id="@exercise.Id" class="btn btn-outline-info flex-grow-1">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            @if (User.Identity?.IsAuthenticated ?? false && currentUserId == exercise.CreatorId)
                            {
                                <a asp-action="Edit" asp-route-id="@exercise.Id" class="btn btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@exercise.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this exercise?');">
                                    <button type="submit" class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}