@using GymTrackerApp.ViewModels.ViewModels.Workout
@model IEnumerable<WorkoutViewModel>

@{
    ViewData["Title"] = "My Workouts";
}

<div class="d-flex justify-content-between align-items-center mb-4 text-white">
    <h1><i class="bi bi-journal-check"></i> My Workouts</h1>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Create New Workout</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-secondary text-center">
        <h4>You haven't created any workouts yet.</h4>
        <a asp-action="Create" class="btn btn-primary mt-2">Get Started</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var workout in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white border-secondary shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-info">@workout.Title</h5>
                        <p class="card-text text-white-50">@workout.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-top border-secondary">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@workout.Id" class="btn btn-outline-primary flex-grow-1">View</a>
                            <a asp-action="Edit" asp-route-id="@workout.Id" class="btn btn-warning"><i class="bi bi-pencil"></i></a>

                            <form asp-action="Delete" asp-route-id="@workout.Id" method="post" onsubmit="return confirm('Delete this workout?');">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}