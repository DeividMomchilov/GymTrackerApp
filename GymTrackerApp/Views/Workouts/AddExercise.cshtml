@using GymTrackerApp.ViewModels.ViewModels.Workout
@model WorkoutExerciseFormViewModel

@{
    ViewData["Title"] = "Add Exercise";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark text-white border-secondary">
            <div class="card-header border-secondary">
                <h4 class="mb-0">Add Exercise to: <span class="text-info">@Model.WorkoutTitle</span></h4>
            </div>
            <div class="card-body">
                <form asp-action="AddExercise" method="post">
                    <input type="hidden" asp-for="WorkoutId" />
                    <input type="hidden" asp-for="WorkoutTitle" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ExerciseId" class="form-label text-light">Select Exercise</label>
                        <select asp-for="ExerciseId" class="form-select bg-secondary text-white border-dark">
                            <option value="">-- Choose Exercise --</option>
                            @foreach (var ex in Model.AvailableExercises)
                            {
                                <option value="@ex.Id">@ex.Name (@ex.MuscleName)</option>
                            }
                        </select>
                        <span asp-validation-for="ExerciseId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Sets" class="form-label">Sets</label>
                            <input asp-for="Sets" class="form-control bg-secondary text-white border-dark" />
                            <span asp-validation-for="Sets" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Reps" class="form-label">Reps</label>
                            <input asp-for="Reps" class="form-control bg-secondary text-white border-dark" />
                            <span asp-validation-for="Reps" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Weight" class="form-label">Weight (kg)</label>
                            <input asp-for="Weight" class="form-control bg-secondary text-white border-dark" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-success">Add to Workout</button>
                        <a asp-action="Details" asp-route-id="@Model.WorkoutId" class="btn btn-outline-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}