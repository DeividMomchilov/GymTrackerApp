@using GymTrackerApp.ViewModels.ViewModels.Workout
@model WorkoutDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 text-white">
        <div>
            <h1 class="text-info">@Model.Title</h1>
            <p class="lead text-white-50">@Model.Description</p>
        </div>
        <a asp-controller="Workouts" asp-action="AddExercise" asp-route-id="@Model.Id" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add Exercise
        </a>
    </div>

    @if (!Model.Exercises.Any())
    {
        <div class="alert alert-warning text-center">
            <h5>This workout is empty.</h5>
            <p>Click "Add Exercise" to start building your routine.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle border-secondary">
                <thead>
                    <tr class="text-secondary">
                        <th>Exercise</th>
                        <th>Target</th>
                        <th class="text-center">Sets</th>
                        <th class="text-center">Reps</th>
                        <th class="text-center">Weight (kg)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Exercises)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ExerciseImageUrl))
                                    {
                                        <img src="@item.ExerciseImageUrl" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    <span class="fw-bold">@item.ExerciseName</span>
                                </div>
                            </td>
                            <td><span class="badge bg-secondary">@item.MuscleName</span></td>
                            <td class="text-center">@item.Sets</td>
                            <td class="text-center">@item.Reps</td>
                            <td class="text-center">@item.Weight</td>
                            <td>
                                <form asp-action="RemoveExercise" method="post" onsubmit="return confirm('Remove from workout?');">
                                    <input type="hidden" name="workoutId" value="@Model.Id" />
                                    <input type="hidden" name="exerciseId" value="@item.ExerciseId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-x-lg"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">Back to Workouts</a>
    </div>
</div>