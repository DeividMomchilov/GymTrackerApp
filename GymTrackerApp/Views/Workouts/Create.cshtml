@using GymTrackerApp.ViewModels.ViewModels.Workout
@model WorkoutFormViewModel

@{
    ViewData["Title"] = "Create Workout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header bg-transparent border-secondary">
                <h4 class="mb-0">Create New Workout</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-light"></label>
                        <input asp-for="Title" class="form-control bg-secondary text-white border-dark" placeholder="e.g. Monday Chest Day" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-light"></label>
                        <textarea asp-for="Description" class="form-control bg-secondary text-white border-dark" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Create Workout</button>
                        <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}